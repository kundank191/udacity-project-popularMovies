<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/trailer_row_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trailerPoster_iv"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/image_place_holder_back_drop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/trailers"/>

    <!-- Trailer Button -->
    <ImageView
        android:id="@+id/trailer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/trailers"
        android:src="@drawable/play_button"
        app:layout_constraintBottom_toBottomOf="@+id/trailerPoster_iv"
        app:layout_constraintEnd_toEndOf="@+id/trailerPoster_iv"
        app:layout_constraintStart_toStartOf="@+id/trailerPoster_iv"
        app:layout_constraintTop_toTopOf="@+id/trailerPoster_iv" />

</android.support.constraint.ConstraintLayout>